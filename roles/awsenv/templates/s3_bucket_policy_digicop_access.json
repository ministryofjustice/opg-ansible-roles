{
  "Version": "2012-10-17",
  "Id": "PutObjPolicy",
  "Statement": [
	{
	  "Sid": "DenyUnEncryptedObjectUploads",
	  "Effect": "Deny",
	  "Principal": {
		"AWS": "*"
	  },
	  "Action": "s3:PutObject",
	  "Resource": "arn:aws:s3:::{{ [item.name, opg_data.stack]|join('-') }}/*",
	  "Condition": {
		"StringNotEquals": {
		  "s3:x-amz-server-side-encryption": "AES256"
		}
	  }
	},
	{
	  "Sid": "DigiCopPermissions",
	  "Effect": "Allow",
	  "Principal": {
		"AWS": "arn:aws:iam::705467933182:role/frontend"
	  },
	  "Action": [
		"s3:GetObject",
		"s3:PutObject",
		"s3:DeleteObject",
		"s3:ListBucket"
	  ],
	  "Resource": [
		"arn:aws:s3:::{{ [item.name, opg_data.stack]|join('-') }}",
		"arn:aws:s3:::{{ [item.name, opg_data.stack]|join('-') }}/*"
	  ]
	}
  ]
}
